package com.kh.web.servlet;

import java.io.IOException;
import java.util.Arrays;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet
 * webservice를 위한 java class
 * HttpServlet을 상속해야함
 * 
 * Servlet 생명주기
 * 
 * 1. Servlet 객체생성(기본생성자 호출) - new연산자없이도 tomcat에서 알아서해준다
 * 2. init메소드 호출
 * 3. HttpServlet의 service메소드 호출
 * 4. 전송방식에 따라 doGet | doPost 호출
 * 
 *
 */
public class TestPerson1Servlet extends HttpServlet {
	
	@Override
	public void doGet(HttpServletRequest request, HttpServletResponse response) 
		throws IOException, ServletException{
		//1. 사용자입력값 가져오기
		String name = request.getParameter("name");
		String color = request.getParameter("color");
		String animal = request.getParameter("animal");
		String[] foodArr = request.getParameterValues("food"); //여러값(String배열을 리턴)
		
		System.out.println("name = " + name);
		System.out.println("color = " + color);
		System.out.println("animal = " + animal);
		System.out.println("foodArr = " + Arrays.toString(foodArr));
		
		
	}
	
	
}
